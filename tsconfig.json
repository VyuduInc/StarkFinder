{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/*"]
    }
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
